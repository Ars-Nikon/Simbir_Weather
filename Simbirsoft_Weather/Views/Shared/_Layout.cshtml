<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>Weather readiness</title>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <!-- Loading third party fonts -->
    <link href="http://fonts.googleapis.com/css?family=Roboto:300,400,700|" rel="stylesheet" type="text/css">
    <link href="~/WeatherFront/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Loading main css file -->

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/WeatherFront/css/style.css">

</head>


<body>
    <div class="site-content">
        <div class="site-header">
            <div class="container">
                <a asp-action="index" asp-controller="Home" class="branding">
                    <img src="~/WeatherFront/images/logo.png" alt="" class="logo">
                    <div class="logo-type">
                        <h1 class="site-title">ПогодоГотовность</h1>
                        <small class="site-description">Simbirsoft</small>
                    </div>
                </a>
                <!-- Default snippet for navigation -->
                <div class="main-navigation">
                    <ul class="menu">
                        <li class="menu-item current-menu-item"><a asp-action="index" asp-controller="Home">Погода</a></li>

                        @if (User.Identity.IsAuthenticated)
                        {
                    <li class="menu-item">
                        <a asp-action="Login" asp-controller="Account"><i class="fa fa-user-circle"></i> @await Component.InvokeAsync("UserIdentityName", User.Identity.Name)</a>
                    </li>
                        }
                        else
                        {
                            <li class="menu-item">
                                <a asp-action="Login" asp-controller="Account"><i class="fa fa-user-secret"></i> Вход</a>
                            </li>
                        }


                    </ul> <!-- .menu -->
                </div> <!-- .main-navigation -->
            </div>
        </div> <!-- .site-header -->


        @RenderBody()
    </div>



    <footer class="site-footer">
        <p class="colophon">Летний Интенсив 2021 группа: kb1_dotnet </p>
    </footer> <!-- .site-footer -->


    <script src="~/WeatherFront/js/jquery-1.11.1.min.js"></script>
    <script src="~/WeatherFront/js/plugins.js"></script>
    <script src="~/WeatherFront/js/app.js"></script>

    </body>

</html>
